<h1 class="ui header">Home</h1>

<div class="ui segment">
	<h3 class="ui dividing header">Your Data:</h3>		
	<div class="ui stackable two column grid">
		<div class="column">						
			<canvas id="myChart" width="400" height="400"></canvas>
		</div>
		<div class="column">
			<h3 class="ui dividing header">Suggestions:</h3>
			<div class="">You need more: <i>Fun</i></div>
			<div class="ui middle aligned bulleted animated list">
				<div class="item">
					<div class="content">
						<div class="">Swimming</div>
					</div>
				</div>
				<div class="item">
					<div class="content">
						<div class="">Hiking</div>
					</div>
				</div>
				<div class="item">
					<div class="content">
						<div class="">Surfing</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

<div class="ui segment">

	<div class="ui grid stackable">
		<div class="thirteen wide column">
			<h2>Today's Schedule:</h2>
		</div>
		<div class="right floated left aligned three wide column">
			<button class="ui primary button add_event_button"><i class="icon add"></i>Add Event</button>
		</div>
	</div>
	<div class="ui divider"></div>



	<div class="ui cards schedule_cards">

		{{#each	events}}
		<div class="raised blue card" id="{{id}}">
			<div class="content">
				<div class="header">{{name}}</div>
				<div class="meta">{{time}}</div>
				<div class="description">{{details}}</div>
			</div>
			<div class="extra content">
				<div class="ui two buttons">
					<div class="ui basic green button edit_event_button">Edit</div>
					<div class="ui basic red button delete_event_button">Delete</div>
				</div>
			</div>
		</div>
		{{/each}}


	</div>

	<div class="ui small modal" id="delete_modal">
		<div class="header">
			Deleting Event
		</div>
		<div class="content">
			<p>Are you sure?</p>
		</div>
		<div class="actions">
			<div class="ui basic negative button">
				<i class="remove icon"></i>
				No
			</div>
			<div class="ui basic positive icon button" id="delete_modal_yes">
				<i class="checkmark icon"></i>
				Yes            
			</div>
		</div>
	</div>


	<div class="ui small modal" id="edit_modal">
		<div class="header">
			Editing Event
		</div>
		<div class="content">

			<form class="ui form">
				<div class="field">
					<label>Name:</label>
					<input type="text" name="name" placeholder="Enter new name">
				</div>
				<div class="field">
					<label>Time:</label>
					<input type="text" name="time" placeholder="Enter new time">
				</div>
				<div class="field">
					<label>Details:</label>
					<input type="text" name="details" placeholder="Enter new details">
				</div>
			</form>  

		</div>

		<div class="actions">
			<div class="ui basic negative button">
				<i class="remove icon"></i>
				Cancel
			</div>
			<div class="ui basic positive icon button">            
				<i class="checkmark icon"></i>
				Save
			</div>
		</div>
	</div>


	<div class="ui small modal" id="add_modal">

		<div class="header">
			Adding Event
		</div>

		<div class="content">

			<form id="addFriendForm" method="get" action="/add">
				<h3>Add a friend</h3>
				<div class="form-group">
					<label for="name">Name:</label>
					<input type="text" class="form-control" id="name" placeholder="Name" name="name">
				</div>
				<div class="form-group">
					<label for="description">Description:</label>
					<input type="text" class="form-control" id="description" placeholder="Description" name="description">
				</div>
				<input type="submit" id="submitBtn" class="btn btn-default" value="Add the friend"></input>
			</form>

