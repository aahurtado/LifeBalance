<style type="text/css">
  #schedule_header {
    padding-bottom: 15px;
  }
  .grid.week_grid {
   margin-top: 20px;
 }
</style>

<div class="ui segment">
  <div class="ui grid stackable">
    <div class="eleven wide column">
      <h2>Mood Diary:</h2>
    </div>
    <div class="right floated left aligned five wide column">
      <button class="ui primary button"><i class="icon add"></i>New Mood Entry</button>
    </div>
  </div>
  <div class="ui divider"></div>

  <div class="ui stackable seven column grid week_grid">

    {{#each days}}
    <div class="column" id="{{id}}">
      <h3 class="ui dividing header">{{name}}</h3>
      <div class="ui fluid card">
        <div class="image">
          <img src="{{img}}">
        </div>
        <div class="content">
          <h3>{{mood}}<button class="ui icon circular mini basic button"><i class="write icon"></i></button></h3>
        </div>
      </div>
    </div>
    {{/each}}

  </div>

</div>