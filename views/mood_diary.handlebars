<div class="ui raised segment">
    <div class="ui top attached tabular menu">
        <a class="active item" data-tab="first">Day</a>
        <a class="item" data-tab="second">Week</a>
        <a class="item" data-tab="third">Month</a>
    </div>
    <div class="ui bottom attached active tab segment" data-tab="first">
        <div class="ui horizontal divider" id="day">
            <h2 class="ui header">Today's Mood</h2>
        </div>
        <div class="ui stackable one column grid day_grid">
            <div class="column mood_entry" id="day5">
                <div class="ui fluid card">
                    <div class="image">
                        <img src="http://emojione.com/wp-content/uploads/assets/emojis/1f634.svg">
                    </div>
                    <div class="content">
                        <h3>Tired</h3>
                        <button class="ui icon circular mini basic button edit_mood_entry_button"><i class="write icon"></i></button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="ui bottom attached tab segment" data-tab="second">
        <div class="ui horizontal divider" id="week">
            <h2 class="ui header">Week's Mood</h2>
        </div>
        <div class="ui stackable seven column grid week_grid">
            {{#each days}}
            <div class="column mood_entry" id="{{id}}">
                <h3 class="ui dividing header">{{name}}</h3>
                <div class="ui fluid card">
                    <div class="image">
                        <img src="{{img}}">
                    </div>
                    <div class="content">
                        <h3>{{mood}}</h3>
                        <button class="ui icon circular mini basic button edit_mood_entry_button"><i class="write icon"></i></button>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
